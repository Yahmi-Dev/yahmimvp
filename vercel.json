{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install && npx prisma generate",
  "outputDirectory": "dist",
  "functions": {
    "api/[...path].ts": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "src/lib/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/[...path]"
    }
  ]
}

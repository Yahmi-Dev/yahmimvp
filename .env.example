# ============================================
# DATABASE CONFIGURATION
# ============================================
# Get your connection string from: https://neon.tech
# IMPORTANT: Always use SSL in production (?sslmode=require)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# Generate a secure random string (minimum 32 characters)
# Command: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# CRITICAL: Use different secrets for dev/staging/production
# IMPORTANT: Use JWT_SECRET for server-side, VITE_JWT_SECRET for client-side (if needed)
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"
VITE_JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"

# ============================================
# AI API KEYS
# ============================================
# Groq API Key (Free tier available)
# Get from: https://console.groq.com/keys
GROQ_API_KEY="gsk_your_groq_api_key_here"

# OpenRouter API Key (Pay-as-you-go)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY="sk-or-v1-your_openrouter_api_key_here"

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Environment: development | production | staging
NODE_ENV="production"

# Server port (default: 3001, not used in Vercel)
PORT=3001

# Frontend & API URL (for CORS)
# Development: http://localhost:5173
# Production: https://yahmimvp.vercel.app
VITE_APP_URL="https://yahmimvp.vercel.app"
VITE_API_URL="https://yahmimvp.vercel.app"

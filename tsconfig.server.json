{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "outDir": "./dist-server",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "declaration": false,
    "allowImportingTsExtensions": false,
    "types": ["node"]
  },
  "include": [
    "server/**/*",
    "src/lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-server"
  ]
}

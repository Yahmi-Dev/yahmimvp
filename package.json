{
  "name": "yahmi",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run check:env && concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "vite",
    "build": "npm run db:generate && vite build",
    "vercel-build": "npm run db:generate && vite build",
    "preview": "vite preview",
    "start": "tsx server/index.ts",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json",
    "check:env": "node scripts/check-env.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:test": "node -e \"require('dotenv').config(); const { PrismaClient } = require('@prisma/client'); const prisma = new PrismaClient(); prisma.$connect().then(() => { console.log('✅ Database connection successful'); process.exit(0); }).catch((e) => { console.error('❌ Database connection failed:', e.message); process.exit(1); });\"",
    "postinstall": "prisma generate"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.1.1",
    "@tsconfig/svelte": "^5.0.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^24.3.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.0",
    "postcss": "^8.5.6",
    "prisma": "^6.19.0",
    "svelte": "^5.38.1",
    "svelte-check": "^4.3.1",
    "tsx": "^4.19.2",
    "typescript": "~5.8.3",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "@ai-sdk/groq": "^2.0.32",
    "@ai-sdk/openai": "^2.0.77",
    "@prisma/client": "^6.2.0",
    "@vercel/postgres": "^0.10.0",
    "ai": "^5.0.107",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "echarts": "^6.0.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-svelte": "^0.556.0",
    "svelte-spa-router": "^4.0.1",
    "zod": "^3.24.1"
  }
}
